package com.rodrigo.venuefinder.android;

import android.content.Intent;
import com.rodrigo.venuefinder.android.model.Venue;

public class Global {
	
    public static Intent createShareIntent(Venue venueItem) {
        Intent shareIntent = new Intent(Intent.ACTION_SEND);
        shareIntent.putExtra(Intent.EXTRA_TEXT, "Name: " + venueItem.getName() + "; " + "Address:" + venueItem.getAddress());
        shareIntent.setType("text/plain");
        return shareIntent;
    }
    
}
